      m_InstructionText: 
      m_TutorialButtonText: 
      codeBlockText: 
    - m_Type: 1
      Title:
        m_Untranslated: Add the Following Code to RaycastAtMouseOnClick
      Text:
        m_Untranslated: 'Add this after the code you just added (inside the <c>if</c>
          statement:

          <code>

          Vector3 mousePositionInWorldSpace
          = ray.origin;

          mousePositionInWorldSpace.z = 0;

          Debug.Log("world
          space: " + mousePositionInWorldSpace);

          </code>'
      m_PollItems: []
      m_PollCorrectItemIndexes: 00000000
